    ]
  },
  {
    "page_number": 1,
    "bbox": [
      72.02,
      625.42,
      374.35,
      640.46
    ],
    "text": "certificate is sufficient to maintain a valid application.",
    "fonts": [
      "BookAntiqua"
    ],
    "sizes": [
      12.479999542236328
    ]
  },
  {
    "page_number": 1,
    "bbox": [
      72.02,
      695.62,
      230.06,
      719.95
    ],
    "text": "1 CA/WRT/325/2002 dated 28.02.2002",
    "fonts": [
      "Calibri"
    ],
    "sizes": [
      6.480000019073486,
      9.960000038146973,
      12.0
    ]
  },
