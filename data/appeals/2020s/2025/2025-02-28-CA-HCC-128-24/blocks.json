    "bbox": [
      144.02,
      238.61,
      526.33,
      251.65
    ],
    "text": "should not interfere to the detriment of an accused person except for very",
    "fonts": [
      "Century"
    ],
    "sizes": [
      11.039999961853027
    ]
  },
