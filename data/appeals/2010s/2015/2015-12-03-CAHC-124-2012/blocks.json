    "fonts": [
      "Helvetica"
    ],
    "sizes": [
      14.100000381469727,
      14.17748737335205,
      14.446785926818848,
      14.560287475585938
    ]
  },
  {
    "page_number": 5,
    "bbox": [
      67.83,
      120.92,
      535.38,
      140.3
    ],
    "text": "The Judge had carefully evaluated the evidence of the accused-",
    "fonts": [
      "Helvetica"
    ],
    "sizes": [
      14.07933521270752,
      14.100000381469727,
      14.17748737335205,
      14.560287475585938
